<h1> Manage by Buildings </h1>
<table class = "table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	<% @buildings.each do |building| %>
		<tr>
			<td><%= building.name %></td>
			<td>
			  <%= link_to "Enter", building, class: "btn btn-small btn-primary" %>
		          <%= link_to "Edit", edit_building_path(building), class: "btn btn-small btn-warning" %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= link_to "Add New Building", new_building_path, class: "btn btn-large btn-primary" %>
