%table.table.table-striped.table-boredered.table-hover
  %thead
    %tr
      %th Router
      %th Router Location
      %th Action
  %tbody
    - @routers_list.each do |router|
      %tr
        %td= router.ip
        %td= router.location
        %td
          = link_to "Manage", {controller: "router_managers", action: "show", id: router.id}, class: "btn btn-action"
= link_to "Add New Router", new_router_path, class: "btn btn-default"
